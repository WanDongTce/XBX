page {
    color: #333;
    background-color: #f7f7f7;
}
form{
    width: 100%;
    height: 100%;
    border-top: 1rpx solid #dfdfdf;
}
.itembox {
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1rpx solid #dfdfdf;
    background-color: #fff;
}

.item_mustimg {
    margin: 8rpx 8rpx 0 30rpx; 
    color: #e47575;
    font-size: 45rpx;
    display: inline-block;
    vertical-align: middle; 
}

.item_left {
    font-size: 32rpx;
    color: #333;
}

.input {
    height: 100%;
    margin-left: 90rpx;
    font-size: 32rpx;
}

.placeholder {
    color: #999;
}

.picker-box, picker{
    position: relative;
    width: 100%;
    padding: 4% 24rpx;
    font-size: 32rpx;
    color: #333;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    border-bottom: 1rpx solid #dfdfdf;
    background-color: #fff;
}
.no-boder{
    border-bottom: none;
}
.item_mustimg2 {
    color: #e47575;
    font-size: 45rpx;
    display: inline-block;
    vertical-align: middle;
    margin: 8rpx 8rpx 0 0;
}
.picker{
    font-size: 32rpx;
    color: #333;
    display: inline-block;
    vertical-align: middle;
}

.picker text {
    margin-left: 24rpx;
}

.arrowimg {
    position: absolute;
    right: 24rpx;
    top: 50%;
    transform: translateY(-50%);
    -webkit-transform: translateY(-50%);
    width: 26rpx;
    height: 17rpx;
}

.btn {
    background-color: #4bace2;
    color: #fff;
    height: 90rpx;
    text-align: center;
    margin: 66rpx 46rpx 0rpx;
    font-size: 34rpx;
    line-height: 90rpx;
    border-radius: 8rpx;
}

.btn2 {
    color: #4bace2;
    height: 90rpx;
    text-align: right;
    font-size: 34rpx;
    line-height: 90rpx;
    margin-right: 46rpx;
    margin-top: 50rpx;
}

.gender {
    margin-left: 60rpx;
}

.gender_boyimg {
    width: 27rpx;
    height: 27rpx;
    margin-left: 30rpx;
    vertical-align: middle;
}

.gender_boy {
    width: 168rpx;
    margin-left: 90rpx;
    font-size: 32rpx;
    color: #333;
}

.gender_girlimg {
    width: 30rpx;
    height: 30rpx;
    margin-left: 30rpx;
    vertical-align: middle;
}

.gender_girl {
    width: 168rpx;
    font-size: 32rpx;
    color: #333;
}
