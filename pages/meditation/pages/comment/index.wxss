/* pages/Preview//pages/no-question/index.wxss */
.card{
  margin: 30rpx 20rpx;
  box-shadow: 0 0 15rpx 10rpx #eee;
  padding: 30rpx;
  background-color: white;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title{
  margin-bottom: 30rpx;
  font-size: 40rpx;
  color: #333;
}
.item{
  margin-bottom: 20rpx;
  font-size: 32rpx;
  color: #333;
  text-align: left;
  padding: 20rpx 30rpx;
  border: 1rpx solid #97dfff;
  width: 85%;
  border-radius: 36rpx;
  margin: 20rpx;
}
.item-right{
  background-color: #0DCE92;
  border-width: 0;
  color: white;
  background-image: url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-size: 30rpx 30rpx;
  background-position: right;
}
.item-wrong{
  background-color: #F9867B;
  border-width: 0;
  color: white;
  background-image: url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-size: 30rpx 30rpx;
  background-position: right;
}
.progress{
  width: 75%;
  margin-top: 40rpx;
  margin-bottom: 100rpx;
}
.section{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
}
.text-progress{
  font-size: 30rpx;
  color: #333;
}
.btn{
  background-color: transparent;
  width: 40%;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
  color: #F0803C;
  margin: -2rpx;
  border: 2rpx solid #F0803C;
}
.btn1{
  background-color: transparent;
  width: 40%;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  margin: 0;
  margin-left: -3rpx;
  color: #F0803C;
  border: 2rpx solid #F0803C;
}
.btn-active{
  background-color: #F0803C;
  border: 2rpx solid #F0803C;
  color: white;
}
.btn-group{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 120rpx;
}