page{
    background: #f7f7f7;
}
.box{
    width: 100%;
}
.status-box{
    width: 100%;
    height: 40vh;
    background: #fff;
    margin: 20rpx 0 16rpx;
    text-align: center;
}
.status-box image{
    width: 10vh;
    height: 10vh;
    margin: 10vh 0 5vh;
}
.status-box view{
    width: 100%;
    height: 5vh;
    text-align: center;
    font-size: 30rpx;
    color: #333;
}
.list{
    width: 100%;
    background: #fff;
    margin-bottom: 50rpx;
}
.item{
    width: 100%;
    padding: 4% 24rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    border-bottom: 1rpx solid #dfdfdf;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
}
.lt{
    width: 38%;
    font-size: 30rpx;
    color: #333;
}
.rt{
    width: 60%;
    font-size: 30rpx;
    color: #999;
    text-align: right;
}
.item:last-child{
    border-bottom: none;
}
.btn{
    width: 90%;
    height: 80rpx;
    margin: 0 auto;
    text-align: center;
    line-height: 80rpx;
    background: #4bace2;
    color: #fff;
    border-radius: 10rpx;
    font-size: 30rpx;
}