page {
    width: 100%;
    min-height: 100vh;
    background-color: #fff;
}
.component-class {
    border-bottom: 1px solid #dfdfdf;
}
.content-box {
    width: 100%;
    padding-bottom: 90rpx;
}
.answer {
    width: 100%;
    padding: 24rpx;
    border-bottom: 16rpx solid #f7f7f7;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
} 

.content {
    width: 100%;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.qus-sub {
    width: 100%;
    margin-bottom: 20rpx;
}

.qus-sub text {
    margin-right: 20rpx;
    font-size: 24rpx;
    color: #ccc;
}

.qus-header{
    width: 100%;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    margin-bottom: 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.qus-status{
    margin-right: 16rpx;
    font-size: 30rpx;
}
.qus-status-1{
    color: #f65452;
}
.qus-status-2{
    color: #4bace2;
}
.qus-title {
    font-size: 30rpx;
    color: #333;
}

.img-box{
    width: 100%;
    height: 200rpx;
    white-space: nowrap; 
    display: flex;
    display: -webkit-flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-bottom: 20rpx;
}
.img-box-3{
    height: 300rpx;
}
.qus-img {
    width: 32%;
    height: 200rpx;
    margin-right: 2%;
    display: inline-block;
}
.qus-img:last-child{
    margin-right: 0;
}
.qus-img-2{
    width: 100%;
    height: 400rpx;
    margin-bottom: 20rpx;
}
.qus-img-3{
    width: 49%;
    margin-right: 2%;
    height: 300rpx;
    display: inline-block;
}
.qus-img-3:last-child{
    margin-right: 0;
}


.link{
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    background: #f7f7f7;
    color: #4a80cf;
    font-size: 26rpx;
    padding: 0 24rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}
.link text{
    display: inline-block;
    vertical-align: middle;
}
.link-icon{
    width: 28rpx;
    height: 28rpx;
    margin-right: 16rpx;
    display: inline-block;
    vertical-align: middle;
}
.qus-tips {
    width: 100%;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;   
}
.tips-name{
    width: 60%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.tips-name image {
    width: 46rpx;
    height: 46rpx;
    margin-right: 16rpx;
    border-radius: 50%;
    vertical-align: middle;
}
.tips-name text {
    font-size: 26rpx;
    color: #999;
    margin-right: 12rpx;
}

.qus-reply {
    width: 40%;
    text-align: right;
    font-size: 26rpx;
    color: #ababab;
}
.qus-reply .border{
    margin: 0 16rpx;
    color: #ccc;
}
