page {
    width: 100%;
    min-height: 100vh; 
    background: #fff;
}
.component-class{
    border-bottom: 1rpx solid #dfdfdf;
}

.item {
    width: 100%;
    border-bottom: 16rpx solid #f4f4f4;
    padding: 40rpx 24rpx 20rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}

.tit {
    width: 100%;
    line-height: 1.5em;
    color: #333;
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
.link{
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    background: #f7f7f7;
    color: #4a80cf;
    font-size: 26rpx;
    padding: 0 24rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    border-radius: 10rpx;
    margin: 20rpx 0;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}
.time{
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    color: #999;
    font-size: 24rpx;
}
