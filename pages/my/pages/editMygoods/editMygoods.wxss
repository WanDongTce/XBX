.component-class{
    border-bottom: 1rpx solid #dfdfdf;
}
.homework-cont{
    position: relative;
    width: 100%;
    background: #fff;
    margin: 16rpx auto;
    
}
.title{
    width: 100%;
    height: 80rpx;
    padding: 0 24rpx;
    line-height: 80rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    border-bottom: 1rpx solid #dfdfdf;
    font-size: 28rpx;
    color: #999;
}
textarea{
    width: 100%;
    height: 304rpx;
    font-size: 28rpx;
    color: #999;
    line-height: 1.5em;
    padding: 30rpx 24rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.placeh{
    color: #999;
}
.tips{
    width: 100%;
    height: 80rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    padding: 0 24rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.text-tip{
    width: 20%;
    text-align: right;
    font-size: 28rpx;
    color: #999;
    margin-left: 80%;
}
.imgs{
    width: 100%;
    height: 216rpx;
    background: #fff;
    padding: 32rpx 24rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.scroll-box {
    width: 100%;
    height: 100%;
    white-space: nowrap; 
    background: #fff;
}
.scroll-item{
    position: relative; 
    width: 150rpx;
    height: 150rpx;
    margin-right: 34rpx;
    display: inline-block;
}
.hmwk-img{
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
}
.del-img{
    position: absolute;
    top: 5rpx;
    right: 5rpx;
    width: 40rpx;
    height: 40rpx;
}
.check-class{
    width: 100%;
    height: 108rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 24rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    margin-top: 16rpx;
    background: #fff;
}
.check-text{
    font-size: 30rpx;
    color: #333;
}
.check-rt{
    width: 50%;
    text-align: right;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: flex-end;
}
.check-rt text{
    font-size: 28rpx;
    color: #999;
}
.check-img{
    width: 14rpx;
    height: 24rpx;
    margin-left: 12rpx;
    margin-top: 2rpx;
}
.check-sta-img{
    width: 35rpx;
    height: 35rpx;
}
.btn-box{
    width: 90%;
    margin-top: 50rpx;
    border-radius: 10rpx;
    color: #fff;
    font-size: 34rpx;
    background: #4bace2;
    text-align: center;
    padding: 3% 0;
}