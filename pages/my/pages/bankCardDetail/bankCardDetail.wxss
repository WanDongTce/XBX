page {
    background-color: #2d3132;
}
.box{
    width: 100%;
    height: 100vh;
}
.bank-img{
    width: 30%;
    display: block;
    margin: 20% auto 10%;
}
.bank-name{
    text-align: center;
    color: #fff;
    font-size: 40rpx;
    margin-bottom: 5%;
}
.bank-num{
    text-align: center;
    color: #fff;
    font-size: 30rpx;
    margin-bottom: 35%;
}
.btns{
    width: 80%;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
    margin: 0 auto;
}
.btn{
    width: 48%;
    padding: 3% 0;
    background: #fff;
    font-size: 30rpx;
    text-align: center;
    border-radius: 10rpx;
    color: #4bace2;
}
.color-1{
    color: #008c77;
}
.color-2{
    color: #19659f;
}
.color-3{
    color: #c45355;
}
.color-4{
    color: #677077;
}