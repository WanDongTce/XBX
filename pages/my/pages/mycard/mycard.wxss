page {
    width: 100%;
    min-height: 100vh;
    background-color: #f7f7f7;
}
.component-class{
    border-bottom: 1rpx solid #dfdfdf;
}
.list{
    width: 96%;
    margin: 20rpx auto;
    
}
.item{
    position: relative;
    width: 100%;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
    overflow: hidden;
}
.bg{
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    width: 100%;
    height: 100%;
}
.cont{
    width: 100%;
    padding: 10rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.head{
    width: 85%;
    margin: 0 auto;
    padding: 16rpx 0 26rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
}
.lt{
    width: 74%;
}
.h1{
    width: 100%;
    font-size: 30rpx;
    color: #fff;
    /* margin-bottom: 16rpx; */
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
