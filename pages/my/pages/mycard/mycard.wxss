.price{
    width: 25%;
    text-align: right;
    font-size: 40rpx;
    color: #fff;
    font-style: italic;
}
.tip{
    width: 100%;
    padding: 30rpx 24rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    display: flex;
    display: -webkit-flex;
    align-items: flex-end;
    justify-content: space-between;
    background: #fff;
    border-radius: 10rpx;
}
.tip-cont{
    width: 70%;
    font-size: 26rpx;
    color: #999;
    line-height: 2em;
}
.btn{
    width: 25%;
    font-size: 26rpx;
    color: #8ad646;
    border: 1rpx solid #8ad646;
    border-radius: 10rpx;
    text-align: center;
    line-height: 2em;
}
