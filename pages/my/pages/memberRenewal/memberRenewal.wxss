page{
    width: 100%;
    background: #f7f7f7;
}
.navigator-hover{
    background: transparent;
}
.box{
    width: 100%;
}
.info-box{
    position: relative;
    width: 100%;
    height: 300rpx;
}
.bg-img{
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    width: 100%;
    height: 100%;
}

.info{
    width: 100%;
    padding: 75rpx 40rpx 30rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    display: flex;
    display: -webkit-flex;
    align-items: center;
}
.his{
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    color: #ccc;
    font-size: 28rpx; 
    width: 18%;
    text-align: right;
}
.ava{
    width: 102rpx;
    height: 102rpx;
    border-radius: 50%;
    margin-right: 36rpx;
}
.info-cont{
    width: 70%;
}
.name-box{
    width: 100%;
    margin-bottom: 10rpx;
}
.uname,
.vip-icon{
    display: inline-block;
    vertical-align: middle;
}
.uname{
    font-size: 32rpx;
    color: #fff;
    margin-right: 16rpx;
}
.vip-icon{
    width: 96rpx;
    height: 27rpx;
}
.time{
    width: 100%;
    font-size: 28rpx;
    color: #bbb;
}
.form{
    width: 100%;
    padding: 50rpx 24rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.tit{
    width: 100%;
    font-size: 28rpx;
    color: #333;
    margin-bottom: 24rpx;
}
.count-box{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
    background: #fff;
    border-radius: 10rpx;
}
.count-btn{
    width: 15%;
    height: 100%;
    font-size: 40rpx;
    font-weight: bold;
    color: #4bace2;
}
.dis-btn{
    color: #999;
}
.count{
    width: 70%;
    height: 100%;
    font-size: 30rpx;
    color: #666;
    border-left: 1rpx solid #dfdfdf;
    border-right: 1rpx solid #dfdfdf;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.price{
    width: 100%;
    margin: 40rpx 0;
    text-align: right;
    font-size: 32rpx;
    color: #333;
}
.btn{
    width: 100%;
    padding: 3% 0;
    background: #4bace2;
    color: #fff;
    font-size: 32rpx;
    border-radius: 10rpx;
    text-align: center;
}
.tips{
    width: 100%;
    padding: 0 24rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.tip{
    width: 100%;
    line-height: 1.2em;
    font-size: 28rpx;
    color: #666;
    margin-bottom: 20rpx;
}