page {
    background: #f7f7f7;
}

.box {
    width: 100%;
}

.nodt-cont {
    width: 100%;
    height: 30vh;
    margin: 35vh auto;
    text-align: center;
}

.nodt-cont image {
    width: 100rpx;
    height: 120rpx;
    margin-bottom: 30rpx;
}

.nodt-cont view {
    font-size: 30rpx;
    color: #333;
    margin-bottom: 20rpx;
}

.nodt-cont navigator {
    width: 25%;
    line-height: 2em;
    text-align: center;
    color: #fff;
    font-size: 28rpx;
    border-radius: 30rpx;
    background: #4bace2;
    margin: 0 auto;
}

.item{
    position: relative;
    width: 94%;
    margin: 16rpx auto;
    padding: 24rpx;
    background-color: #fff;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    border-radius: 10rpx;
}
.close{
    position: absolute;
    right: 24rpx;
    top: 15rpx;
    font-size: 30rpx;
    color: #999;
}
.head{
    width: 100%;
    display: flex;
    display: -webkit-flex;
    align-items: flex-start;
    margin-bottom: 16rpx;
}
.user-img {
    width: 76rpx;
    height: 76rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}
.hrt{
    width: 80%;
}
.user-name {
    width: 100%;
    font-size: 30rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #4bace2;
    margin-bottom: 10rpx;
}
.conth-rt {
    width: 100%;
    font-size: 24rpx;
    color: #999;
}

.cont-text{
    width: 100%;
    font-size: 30rpx;
    color: #333;
    margin-bottom: 16rpx;
    word-break: break-all;
}
.cont-img {
    width: 300rpx;
    max-height: 450rpx;
    margin-bottom: 16rpx;
}
video {
    width: 100%;
    margin-bottom: 16rpx;
}
.news{
    width: 100%;
    height: 150rpx;
    background: #f7f7f7;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    align-content: center;
    margin-bottom: 16rpx;
}
.news image{
    width: 120rpx;
    height: 150rpx;
    margin-right: 20rpx;
}
.news-rt{
    width: 80%;
}
.news-tit{
    width: 100%;
    margin: 10rpx 0 5rpx;
    color: #333;
    font-size: 30rpx;
}
.news-tips{
    width: 100%;
}
.news-tips text{
    margin-right: 30rpx;
    color: #999;
    font-size: 24rpx;
}
.botm{
    width: 100%;
    display: flex;
    display: -webkit-flex;
    justify-content: space-around;
    align-items: center;
}
.bot-item{
    width: 30%;
    text-align: center;
}
.bot-item image{
    width: 26rpx;
    height: 24rpx;
    margin-right: 10rpx;
}
.bot-item text{
    font-size: 24rpx;
    color: #999;
}
.bot-item .active{
    color: #4bace2;
}