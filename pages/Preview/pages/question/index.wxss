/* pages/Preview//pages/no-question/index.wxss */

.card {
  margin: 30rpx 20rpx;
  box-shadow: 0 0 15rpx 10rpx #eee;
  padding: 30rpx;
  background-color: white;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  margin-bottom: 30rpx;
  font-size: 40rpx;
  color: #333;
}
.card image{width: 100%;display: block;margin: 0 auto;}
.item {
  margin-bottom: 20rpx;
  font-size: 32rpx;
  color: #333;
  text-align: left;
  padding: 20rpx 30rpx;
  border: 1rpx solid #97dfff;
  width: 85%;
  border-radius: 36rpx;
  margin: 20rpx;
}

.item-right {
  background-color: #0dce92;
  border-width: 0;
  color: white;
  background-image: url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-size: 30rpx 30rpx;
  background-position: 550rpx;
}

.item-wrong {
  background-color: #f9867b;
  border-width: 0;
  color: white;
  background-image: url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-size: 30rpx 30rpx;
  background-position: 550rpx;
}

.progress {
  width: 75%;
  margin-top: 40rpx;
  margin-bottom: 100rpx;
}

.section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
}

.text-progress {
  font-size: 30rpx;
  color: #333;
}

.btn {
  background-color: #ccc;
  width: 80%;
  border-radius: 50rpx;
  color: white;
  margin-top: 90rpx;
  position: fixed;
  bottom: 90rpx;
}

.btn-active {
  background-color: #4bace2;
}

.pop-content {
  position: relative;
  height: 100vh;
  width: 100vw;
}

.pop-bg {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.result-content {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  padding-top: 160rpx;
  width: 100%;
  text-align: center;
}

.result-content-text1 {
  font-size: 60rpx;
  color: #ee7934;
  margin-bottom: 20rpx;
  font-weight: 600;
}

.result-content-text2 {
  color: #d5a626;
  font-size: 32rpx;
  margin-bottom: 40rpx;
}

.scores {
  font-size: 80rpx;
}

.submit {
  font-size: 46rpx;
  background-color: #ecaa66;
  color: white;
  padding: 15rpx 60rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
}

.cancel {
  font-size: 46rpx;
  background-color: #ee7d37;
  color: white;
  padding: 15rpx 60rpx;
  border-radius: 16rpx;
}
.write{
  position: fixed;
  bottom: 200rpx;
  right: 35rpx;
}
.write-icon{
  width: 90rpx;
  height: 90rpx;
}