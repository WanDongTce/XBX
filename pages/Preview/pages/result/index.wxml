<!--pages/Preview//pages/no-question/index.wxml-->
<navbar title="逍遥游" isShowBack="{{true}}"></navbar>
<!-- card -->
<view class="card">
<view class="title">是谁写的</view>
<view class="item">A 黑格尔</view>
<view class="item item-right">B 黑格尔</view>
<view class="item">C 黑格尔</view>
<view class="item item-wrong">D 黑格尔</view>
</view>

<view class="section">
<text class="text-progress">第1/10题</text>
<progress class="progress" percent="60" activeColor="#4BACE2" border-radius="30" />
<!-- btn -->
<button class="btn btn-active">下一题</button>
</view>
<van-button bind:click="togglePopup">弹出 Popup</van-button>
  <van-popup
    show="{{ show.middle }}"
    custom-class="center"
    transition="none"
    bind:close="togglePopup"
    bind:transitionEnd="onTransitionEnd"
    custom-style="background-color:transparent;"
  >
   <view class="pop-content">
   <image class="pop-bg" mode="widthFix" src="../../images/pop-bg.png"></image>
   <view class="btn-group"><text>确定</text><text>重做</text></view>
   </view>
  </van-popup>
