page{
    background: #f7f7f7;
}
.box{
    width: 100%;
}
swiper{
    width: 100%;
    height: 400rpx;
}
swiper image{
    width: 100%;
    height: 100%;
}
.itm-tips{
    width: 100%;
    display: flex;
    display: -webkit-flex;
    align-items: flex-end;
    justify-content: space-between;
    padding: 20rpx 24rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    background: #fff;
}
.itm-lt{
    width: 50%;
    display: flex;
    display: -webkit-flex;
    align-items: center;
}
.user-ava{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}
.user-name{
    font-size: 28rpx;
    color: #333;
    margin-bottom: 6rpx;
}
.date{
    font-size: 20rpx;
    color: #999;
}
.itm-rt{
    width: 50%;
    text-align: right;
}
.border{
    height: 40rpx;
    line-height: 35rpx;
    display: inline-block;
    padding: 0 10rpx;
    border-radius: 30rpx;
    border: 1rpx solid #dfdfdf;
}
.add-agree-text{
    font-size: 24rpx;
    color: #999;
}
.active{
    color: #4bace2;
}
.add-agree-icon{
    width: 22rpx;
    height: 22rpx;
    margin-right: 10rpx;
    display: inline-block;
    vertical-align: middle;
}
.tit{
    width: 100%;
    padding: 20rpx 24rpx;
    background: #fff;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    margin: 16rpx 0;
    font-size: 30rpx;
    color: #4bace2;
}
.content{
    width: 100%;
    background: #fff;
}
.content-tit{
    width: 100%;
    padding: 20rpx 24rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    border-bottom: 1rpx solid #dfdfdf;
    font-size: 30rpx;
    color: #333;
}
.content-text{
    width: 100%;
    padding: 16rpx 24rpx 30rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    font-size: 28rpx;
    color: #333;
    line-height: 1.5em;
}
