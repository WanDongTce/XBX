/* pages/find/sport/sport.wxss */
page{
  width: 100%;
  height: 100vh;
}
.bg-box{
  position: relative;
  width: 100%;
  height: 100%;
}
.bg-img{
  display: block;
  width: 100%;
  height: 100vh;
}
.case{
  position: absolute;
  top: 0rpx;
  width: 100%;
  height: 100%;
}

.date{
  width: 100%;
  height: 80rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  border-bottom: solid 1rpx #fbc04c;
}
.date-icon{
  width: 32rpx;
  height: 29rpx;
  margin-right: 10rpx;
}
.date-text{
  font-size: 26rpx;
  color: #fff;
}

.walk{
  position: relative;
  width: 100%;
  height: 527rpx;
  margin-top: 106rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
}
.walk-img{
  width: 527rpx;
  height: 527rpx;
}
.walk-box{
  position: absolute;
  width: 527rpx;
  height: 527rpx;
  text-align: center;
}
.walk-box-a{
  margin-top: 160rpx;
  width:527rpx;
  height: 60rpx;
}
.walk-box-b{
  width:527rpx;
  height: 120rpx;
}
.walk-text-a{
  font-size: 32rpx;
  color: #fff;
}
.walk-text-b{
  font-size: 90rpx;
  color: #fff;
}
.walk-text-c{
  font-size: 32rpx;
  color: #fff;
}

.walking{
  width: 100%;
  height: 50rpx;
  font-size: 0;
}
.walking-text{
  position: absolute;
  right: 40rpx;
  font-size: 24rpx;
  color: #fff;
}
.distance{
  position: relative;
  width: 100%;
  height: 220rpx;
  margin-top: 96rpx;
  display: flex;
  display: -webkit-flex;
}
.distance-box{
  width: 375rpx;
  height: 180rpx;
  text-align: center;
}
.distance-center{
  width: 1rpx;
  height: 63rpx;
  background-color: #fff;
}
.distance-case{
  width: 375rpx;
  height: 90rpx;
}
.distance-text-a{
  font-size: 60rpx;
  color: #fff;
}
.distance-text-b{
  font-size: 26rpx;
  color: #fff;
}
.share{
  position: relative;
  width: 336rpx;
  height: 83rpx;
  margin: 0rpx auto;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  border: solid 3rpx #eb892a;
  border-radius: 42rpx;
  background-color: #fff;
}
.share-img{
  width: 18rpx;
  height: 17rpx;
  margin-right: 10rpx;
}
.share-text{
  font-size: 30rpx;
  color: #eb9c59;
}