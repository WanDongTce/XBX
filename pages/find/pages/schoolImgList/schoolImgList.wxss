page{
    width: 100%;
    background: #f7f7f7;
    padding: 16rpx 24rpx 96rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.box{
    width: 100%;
}
.list{
    width: 100%;
}
.item{
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    background: #fff;
    border-radius: 10rpx;
    margin-bottom: 16rpx;
}
.date{
    width: 100%;
    font-size: 30rpx;
    color: #333;
    margin-bottom: 20rpx;
}

.img {
    max-width: 50%;
}
.add-btn{
    position: fixed;
    bottom: 16rpx;
    left: 5%;
    width: 90%;
    height: 80rpx;
    line-height: 80rpx;
    background: #4bace2;
    text-align: center;
    font-size: 28rpx;
    color: #fff;
    border-radius: 25rpx;
}