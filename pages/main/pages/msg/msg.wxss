.component-class{
    border-bottom: 1rpx solid #dfdfdf;
    background-color:#fbf9fa !important;
}
page{
    min-height: 90vh;
    background-color:#fff;
}
.list{
    width: 100%;
    padding: 0 20rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.item{
    width: 100%;
    padding: 24rpx 0;
    border-bottom: 1rpx solid #e0e0e0;
    display: flex;
    display: -webkit-flex;
    align-items: center;
}
.item:last-child{
    /* border-bottom: none; */
}
.lt{ 
    width: 10%;
    height: 10vw;
    margin-right: 3%;
}

.imgs{
    width: 100%;
    height: 100%;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
    align-content: center;
    flex-wrap: wrap;
    overflow: hidden;
    border-radius: 10rpx;
    /* border: 1rpx solid #dfdfdf; */
}

.img{
    width: 30%;
}
.img:only-child{
    width: 100%;
    height: 100%;
}
.content{
    width: 50%;
    margin-right: 2%;
    overflow: hidden;
}
.title{
    width: 100%;
    font-size: 30rpx;
    /* color: #333; */
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-bottom: 10rpx;
}
.sub{
    width: 100%;
    font-size: 26rpx;
    color: #666;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.rt{
    width: 35%;
}
.circle{
    width: 40rpx;
    height: 40rpx;
    background: #f33;
    border-radius: 50%;
    font-size: 24rpx;
    color: #fff;
    text-align: center;
    line-height: 40rpx;
    margin-left: calc(100% - 40rpx);
}
.circle.more{
    line-height: 30rpx;
}
.time{
    width: 100%;   
    font-size: 24rpx;
    color: #999;
    text-align: right;
    margin-bottom: 10rpx;
}
.aside{
    position: fixed;
    right: 40rpx;
    bottom: 50rpx;
    width: 40rpx;
}

.aside image{
    width: 40rpx;
    height: 40rpx;
    margin-bottom: 30rpx;
    display: block;
}
.aside image:last-child{
    margin-bottom: 0;
}
.hide_sun{display:none !important;}
