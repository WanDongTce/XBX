page {
    background-color: #f7f7f7;
}
.box{
    width: 100%;
    padding: 40rpx 30rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.item{
    width: 100%;
    display: flex;
    display: -webkit-flex;
    align-items: flex-start;
    justify-content: space-between;
}
.time-box {
    width: 25%;
    display: flex;
    display: -webkit-flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-top: 50rpx;
}
.midd-time-box{
    margin-top: 0;
}
.last-time-box{
    margin-top: 0;
    align-items: flex-end;
}
.time {
    width: 45%;
    font-size: 24rpx;
    color: #333;
}
.time-midd{
    width: 30%;
    display: flex;
    display: -webkit-flex;
    flex-flow: column;
    align-items: center;
}
.time-icon{
    width: 40rpx;
    height: 40rpx;
}
.dotted{
    width: 1rpx;
    height: 150rpx;
    border-left: 1rpx dotted #4bace2;
}
.midd-dotted{
    height: 240rpx;
}
.last-dotted{
    height: 50rpx;
}
.arrow-lt-ic-box{
    width: 25%;
    text-align: right;
}
.arrow-lt-icon{
    width: 26rpx;
    height: 40rpx;
}
.content-box {
    width: 75%;
    height: 200rpx;
    padding: 0 16rpx;
    background: #fff;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    border-radius: 15rpx;
    margin-bottom: 40rpx;
}
.content-header{
    width: 100%;
    height: 70rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1rpx solid #dfdfdf;
}
.cont-lt {
    width: 50%;
    font-size: 28rpx;
    color: #333;
}
.cont-rt{
    width: 50%;
    font-size: 26rpx;
    color: #4bace2;
    text-align: right;
}

.progress-box{
    width: 95%;
    height: 60rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
}
.progress{
    width: 80%;
    margin-right: 20rpx;
    border: 1rpx solid #facb35;
    border-radius: 20rpx;
}
.progress-text{
    font-size: 24rpx;
    color: #fb9e19;
}
.tip{
    width: 100%;
    height: 60rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
}
.tip-lt{
    width: 50%;
}
.tip-icon{
    width: 26rpx;
    height: 26rpx;
    margin-right: 10rpx;
    display: inline-block;
    vertical-align: middle;
}
.tip-text{
    font-size: 26rpx;
    color: #999;
    display: inline-block;
    vertical-align: middle;
}
.btn-box {
    width: 60%;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: flex-end;
}
.btn{
    width: 40%;
    padding: 1% 10rpx;
    font-size: 26rpx;
    color: #fff;
    text-align: center;
    border-radius: 10rpx;
    margin-left: 20rpx;
}
.bg-gray{
    background: #ccc;
}
.bg-f33{
    background: #f33;
}
.bg-green{
    background: #4bace2;
}