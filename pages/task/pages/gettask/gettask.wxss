page {
    background-color: #f7f7f7;
    padding-bottom: 8vh;
}

.cont-box {
    width: 100%;
    padding: 32rpx 30rpx;
    background-color: #fff;
    margin-bottom: 16rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}

.tit {
    width: 100%;
    line-height: 32rpx;
    margin-bottom: 20rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
}

.title-line {
    width: 8rpx;
    height: 30rpx;
    background-color: #4bace2;
    margin-right: 19rpx;
}

.tit-text {
    font-size: 30rpx;
    color: #333;
}
.cont {
    width: 95%;
    margin-left: 5%;
    font-size: 28rpx;
    color: #333;
    line-height: 1.5em;
}
.picker-box{
    width: 100%;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    margin-bottom: 20rpx;
}
.picker-box:last-child{
    margin-bottom: 0;
}
.picker-lt {
    margin-right: 30rpx;
    font-size: 28rpx;
    color: #333;
    line-height: 1.5em;
}
.picker{
    position: relative;
    width: 230rpx;
    line-height: 1.5em;
    text-align: center;
    background-color: #f1f1f1;
    border-radius: 5rpx;
}
.picker text{
    display: inline-block;
    vertical-align: middle;
    font-size: 28rpx;
    color: #333;
}
.arrow-icon {
    width: 14rpx;
    height: 11rpx;
    vertical-align: middle;
    margin-left: 18rpx;
}

.scroll-view {
    width: 100%;
    height: 150rpx;
    white-space: nowrap;
}

.scroll-view-item{
    width: 150rpx;
    height: 100%;
    text-align: center;
    display: inline-block;
    overflow: hidden;
    vertical-align: top;
}

.scroll-header {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    display: inline-block;
}
.scorll-name {
    width: 100%;
    height: 50rpx;
    font-size: 28rpx;
    color: #333;
    line-height: 50rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.fri-bing-box{
    position: relative;
}
.mask{
    position: absolute;
    left: 25rpx;
    top: 0;
    z-index: 10;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background: rgba(0,0,0,.66);
    color: #fff;
    font-size: 24rpx;
    line-height: 100rpx;
    text-align: center;
}
.btn-box{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 8vh;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
}
.btn{
    width: 50%;
    text-align: center;
    color: #fff;
    font-size: 30rpx;
    line-height: 8vh;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.btn:only-child{
    width: 100%;
}
.bg-green{
    background: #4bace2;
}
.bg-gray{
    background: #ccc;
}
.bg-red{
    background: #f33;
}
.bg-fff{
    background: #fff;
}
.btn-border{
    border: 1rpx solid #f33;
}
.color-f33{
    color: #f33;
}