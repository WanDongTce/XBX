page {
    background-color: #f7f7f7;
    padding-bottom: 8vh;
}

.cont-box {
    width: 100%;
    padding: 32rpx 30rpx;
    background-color: #fff;
    margin-bottom: 16rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}

.tit {
    width: 100%;
    line-height: 32rpx;
    margin-bottom: 20rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
}

.title-line {
    width: 8rpx;
    height: 30rpx;
    background-color: #4bace2;
    margin-right: 19rpx;
}

.tit-text {
    font-size: 30rpx;
    color: #333;
}

.cont {
    width: 95%;
    margin-left: 5%;
    font-size: 28rpx;
    color: #333;
    line-height: 1.5em;
    margin-bottom: 16rpx;
}
.cont:last-child{
    margin-bottom: 0;
}
.cont text{
    color: #4bace2;
    margin-left: 10rpx;
}
.picker-box{
    width: 100%;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    margin-bottom: 20rpx;
}
.picker-box:last-child{
    margin-bottom: 0;
}
.picker-lt {
    margin-right: 30rpx;
    font-size: 28rpx;
    color: #333;
    line-height: 1.5em;
}
.picker{
    position: relative;
    width: 230rpx;
    line-height: 1.5em;
    text-align: center;
    background-color: #f1f1f1;
    border-radius: 5rpx;
}
.picker text{
    display: inline-block;
    vertical-align: middle;
    font-size: 28rpx;
    color: #333;
}
.list{
    width:  100%;
}
.item{
    width: 100%;
    padding: 24rpx 40rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    background: #f9f9f9;
    margin-bottom: 16rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
}
.item-img{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-right: 24rpx;
}
.item-info{
    min-width: 80%;
}
.item-name{
    font-size: 30rpx;
    color: #333;
    margin-bottom: 10rpx;
}
.item-num{
    font-size: 30rpx;
    color: #333;
}
.item-num text{
    color: #4bace2;
    margin-left: 10rpx;
}
.btn-box {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 8vh;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
}

.btn {
    width: 50%;
    text-align: center;
    color: #fff;
    font-size: 30rpx;
    line-height: 8vh;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}

.btn:only-child {
    width: 100%;
}

.bg-green {
    background: #4bace2;
}

.bg-gray {
    background: #ccc;
}

.bg-red {
    background: #f33;
}

.bg-fff {
    background: #fff;
}

.btn-border {
    border: 1rpx solid #f33;
}

.color-f33 {
    color: #f33;
}
