@import "../../../../template/tab/tab.wxss";

page {
    background: #f7f7f7;
    padding: 18vh 0 0;
}

.tabs {
    border-bottom: 1rpx solid #dfdfdf;
}
.tab-content{
    width: 100%;
    padding: 30rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}

.tit{
    width: 100%;
    margin-bottom: 20rpx;
}
.tit-icon {
    width: 8rpx;
    height: 30rpx;
    background-color: #4bace2;
    display: inline-block;
    vertical-align: middle;
}
.tit-text{
    font-size: 30rpx;
    color: #333;
    display: inline-block;
    vertical-align: middle;
    margin-left: 16rpx;
}

.cont {
    font-size: 28rpx;
    color: #999;
    line-height: 1.5em;
    margin-bottom: 30rpx;
    padding-left: 20rpx;
}