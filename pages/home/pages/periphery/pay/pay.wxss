.box{
    width: 100%;
}

.payinfo{
    width: 94%;
    height: 80rpx;
    line-height: 80rpx;
    margin: 10% auto 16rpx;
    background: #fff;
    border-radius: 15rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 2%;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.lt{
    width: 40%;
    font-size: 30rpx;
    color: #333;
}
.rt{
    width: 60%;
    font-size: 30rpx;
    color: #4bace2;
    text-align: right;
}
.tip{
    width: 94%;
    font-size: 26rpx;
    line-height: 1.4em;
    color: #999;
    margin: 0 auto 40rpx;
}
.pay-list{
    width: 100%;
    background: #fff;
    margin-bottom: 50rpx;
}
.pay-item{
    width: 100%;
    padding: 24rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1rpx solid #dfdfdf;
}
.pay-item:last-child{
    border-bottom: none;
}
.pay-lt{
    width: 85%;
    display: flex;
    display: -webkit-flex;
    align-items: center;
}
.pay-icon{
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
}
.pay-method{
    font-size: 30rpx;
    color: #333;
    line-height: 2em;
}
.pay-tip{
    font-size: 28rpx;
    color: #999;
}
.swi-icon{
    width: 35rpx;
    height: 35rpx;
}
.btn{
    width: 94%;
    margin: 0 auto;
    padding: 3% 0;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
    background: #4bace2;
    border-radius: 10rpx;
}