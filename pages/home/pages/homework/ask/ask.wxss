page{
    border-top: 1rpx solid #dfdfdf;
}
.box{
    width: 100%;
    background: #fff;
    margin: 16rpx 0;
}
.item{
    width: 100%; 
    height: 100rpx;
    border-bottom: 1rpx solid #dfdfdf;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    padding: 0 24rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
}
.lt{
    width: 30%;
    color: #333;
    font-size: 30rpx;
    line-height: 100rpx;
}
.rt{
    width: 70%;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
    font-size: 30rpx;
    color: #a0a0a0;
}
.text-rt{
    text-align: left;
}
.arrow-rt-icon{
    width: 24rpx;
    height: 15rpx;
    padding-top: 5rpx;
}

.rt-img{
    width: 40rpx;
    height: 40rpx;
}
.btn-box{
    width: 100%;
    margin-top: 50rpx;
}
.btn{
    width: 90%;
    margin: 0 auto;
    font-size: 34rpx;
    background-color: #4bace2;
    border-radius: 10rpx;
    line-height: 86rpx;
    color: #fff;
    text-align: center;
}

.homework-cont{
    width: 100%;
    padding: 30rpx 24rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
textarea{
    width: 100%;
    height: 174rpx;
    font-size: 28rpx;
    color: #999;
    line-height: 1.5em;
}
.placeh{
    color: #999;
}
.imgs{
    width: 100%;
    height: 216rpx;
    background: #fff;
    padding: 32rpx 24rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.scroll-box {
    width: 100%;
    height: 100%;
    white-space: nowrap; 
    background: #fff;
}
.scroll-item{
    position: relative; 
    width: 150rpx;
    height: 150rpx;
    margin-right: 34rpx;
    display: inline-block;
}
.hmwk-img{
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
}
.del-img{
    position: absolute;
    top: 5rpx;
    right: 5rpx;
    width: 40rpx;
    height: 40rpx;
}
.reward-box{
    width: 100%;
    padding: 30rpx 24rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.xs-icon{
    width: 25rpx;
    height: 26rpx;
    margin-right: 16rpx;
}
.reward-box text{
    font-size: 28rpx;
    color: #999;
    margin-right: 12rpx;
}
.reward-box input{
    width: 80rpx;
    height: 28rpx;
    font-size: 28rpx;
    color: #999;
    border-radius: 10rpx;
    border: 1rpx solid #dfdfdf;
    margin-right: 12rpx;
    text-align: center;
}
.reward-box .color-49b947{
    color: #4bace2;
}
.btn-box{
    width: 90%;
    margin-top: 50rpx;
    border-radius: 10rpx;
    color: #fff;
    font-size: 34rpx;
    background: #4bace2;
    text-align: center;
    padding: 3% 0;
}
