page {
    min-height: 100vh;
    background-color: #f4f4f4;
    border-top: 1rpx solid #dfdfdf;
}

.tab-content {
    width: 100%;
    padding: 0 0 90rpx;
}
.answer {
    width: 100%;
}


 .answer {
    width: 100%;
    padding: 40rpx 0 0 24rpx;
    background-color: #fff;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
} 

.content {
    width: 100%;
    padding-right: 24rpx;
    border-bottom: 1rpx solid #dfdfdf;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}

.answer:last-child .content {
    border-bottom: none;
}
.qus-header{
    width: 100%;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    margin-bottom: 30rpx;
}
.qus-money{
    margin-right: 24rpx;
}
.qus-money image {
    width: 26rpx;
    height: 26rpx;
    margin-right: 10rpx;
    line-height: 44rpx;
    display: inline-block;
    vertical-align: middle;
}

.qus-money text {
    display: inline-block;
    vertical-align: middle;
    color: #feb542;
    font-size: 26rpx;
}

.qus-title {
    width: 80%;
    font-size: 30rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.img-box{
    width: 100%;
    height: 200rpx;
    white-space: nowrap; 
    display: flex;
    display: -webkit-flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-bottom: 40rpx;
}
.img-box-3{
    height: 300rpx;
}
.qus-img {
    /* width: 32%; */
    width: 300rpx;
    height: 200rpx;
    margin-right: 2%;
    display: inline-block;
}
.qus-img:last-child{
    margin-right: 0;
}
.qus-img-2{
    width: 100%;
    height: 400rpx;
}
.qus-img-3{
    width: 49%;
    margin-right: 2%;
    height: 300rpx;
    display: inline-block;
}
.qus-img-3:last-child{
    margin-right: 0;
}

.qus-sub {
    width: 100%;
    margin-bottom: 16rpx;
}

.qus-sub text {
    margin-right: 20rpx;
    font-size: 26rpx;
    color: #999;
}

.qus-tips {
    width: 100%;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;   
    padding-bottom: 16rpx;
}
.tips-name{
    width: 70%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.tips-name image {
    width: 46rpx;
    height: 46rpx;
    margin-right: 16rpx;
    border-radius: 50%;
    vertical-align: middle;
}
.tips-name text {
    font-size: 24rpx;
    color: #999;
    margin-right: 12rpx;
}

.qus-reply {
    width: 30%;
    text-align: right;
}

.qus-reply text {
    font-size: 26rpx;
    color: #4bace2;
    margin-right: 10rpx;
}

.qus-reply image {
    width: 24rpx;
    height: 24rpx;
    vertical-align: middle;
    margin-right: 16rpx;
}

.btn {
    position: fixed;
    bottom: 76rpx;
    right: 25rpx;
    z-index: 2;
    background-color: #4bace2;
    width: 102rpx;
    height: 102rpx;
    border-radius: 50%;
    color: #fff;
    font-size: 27rpx;
    text-align: center;
    line-height: 102rpx;
}
