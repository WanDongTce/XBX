/* pages/play/play.wxss */
page{
   padding-top:0; 
}
.banner{
  width: 100%;
  height: 437rpx;
  display: block;
}
.icon{
  width: 100%;
  height: 158rpx;
  
  background-color: #fff;
}
.icon-box{
  width:20%;
  height: 158rpx;
  text-align: center;
}
.icon-box image{
    width: 76rpx;
    height: 76rpx;
    margin-top:20rpx;
}
.new_icon_text{
    color:#333;
    font-size: 26rpx;
    line-height: 26rpx;
    margin:10rpx 0 15rpx 0;
}
.icon-img{
  width: 96rpx;
  height: 115rpx;
  margin-top: 15rpx;
  margin-left: 30rpx;
}
.game{
  width: 100%;
  height: 182rpx;
  margin-top: 15rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  padding: 0 24rpx;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.game-icon{
  width: 71.7%;
  height: 182rpx;
}
.button{
  width: 111rpx;
  height: 55rpx;
  font-size: 28rpx;
  color: #4bace2;
  text-align: center;
  line-height: 55rpx;
  border-radius: 10rpx;
  border: 1rpx solid #dfdfdf;
}
.recommend{
  width: 100%;
  margin-top: 15rpx;
  background-color: #fff;
}
.recommend-game{
  width: 92%;
  height: 100rpx;
  margin-left: 30rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  border-bottom: solid 1rpx #dfdfdf;
}
.recommend-box{
  width: 8rpx;
  height: 31rpx;
  background-color: #333;
}
.recommend-text{
  font-size: 30rpx;
  color: #333;
  margin-left: 16rpx;
}
.repeat{
  width: 92%;
  height: 150rpx;
  margin-left: 30rpx;
  display: flex;
  display: -webkit-flex;
  border-bottom: solid 1rpx #dfdfdf;
}
.repeat-img{
  width: 7.3%;
  height: 150rpx;
}
.repeat-text{
  width: 70%;
  height: 150rpx;
  margin-left: 22rpx;
}
.repeat-icon{
  position: absolute;
  right: 30rpx;
  width: 10%;
  height: 150rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
}
.img-age{
  width: 50rpx;
  height: 50rpx;
  margin-top: 38rpx;
}
.text-box{
  width: 100%;
  height: 48rpx;
  margin-top: 24rpx;
}
.text-title{
  font-size: 28rpx;
  color: #333;
}
.text-grade{
  font-size: 22rpx;
  color: #666;
}
.text-case{
  width: 100%;
  height: 60rpx;
  margin-top: 0rpx;
}
.repeat-icon-img{
  position: absolute;
  right: 0rpx;
  width: 13rpx;
  height: 23rpx;
}

.new_ddw_box{
    margin-top:15rpx;
    background-color:#fff;
    padding:26rpx 30rpx 60rpx;
}
.new_ddw_topbox{
    padding-bottom:34rpx;
}
.new_ddw_line{
    width:8rpx;
    height:26rpx;
    background-color:#4bace2;
}
.new_ddw_text{
    margin-left:11rpx;
}
.new_ddw_imgbox{
    flex-wrap:wrap;
    justify-content:space-between;
}
.new_ddwimg{
    width:328rpx;
    height:421rpx;
    margin-bottom:33rpx;
}
