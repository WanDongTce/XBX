/* dialog  */

.detail-dialog-mask {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 30;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
    overflow: hidden;
}

.detail-container {
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 40;
    width: 100%;
    overflow: hidden;
    padding: 3% 0;
    background-color: #fff;
}

.detail-content {
    width: 100%;
    height: 100%;
    padding: 0 24rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}

.input-container{
    width: 100%;
    border: 1px solid #ddd;
    border-radius: 30rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
    padding: 3%;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.input-container input{
    width: 100%;
    font-size: 30rpx;
    color: #aaa;
}
.input-container image{
    width: 40rpx;
    height: 40rpx;
}


/* dialog  end */


