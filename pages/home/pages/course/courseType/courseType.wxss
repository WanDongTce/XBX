@import "/component/navigation/navigation.wxss";
@import "/template/scrollTab/scrollTab.wxss"; 
@import "/pages/home/pages/course/course.wxss"; 
page{
    padding-top:10vh;
    background-color:#fff;
}
.p_lr_26{
    margin-top:130rpx;
}
.top_fix {
   
    border-bottom:16rpx solid #f7f7f7;
}
.scroll-view{
    width:70%;
    /* margin-left:23%; */
}


.bigpicker{
    width:30%;
    
}
.picker{
    width:100%;
    line-height: 80rpx;
    text-align: center;
}
.arrow_right_bottom{
    width:12rpx;
    height:12rpx;
    right:25rpx;
    bottom:25rpx;
}
.center {
  width: 80%;
  text-align: center;
  box-sizing: border-box;
  border-radius: 12rpx;
}
.popwrap{
display: flex;
flex-direction: column;
justify-content: center;
align-items: center;
padding-bottom: 40rpx;
}
.popwrap-img{
  margin-bottom: 30rpx;
  overflow: hidden;
}
.pop-text{
  font-size: 28rpx;
  margin-bottom: 40rpx;
  color: #666;
}
.pop-btn{
margin-bottom: 30rpx;
border-width: 0;
width: 60%;
background-color: #4BACE2;
color: white;
border-radius: 46rpx;
}
.pop-btn-outline{
  background-color: white;
  color: #4BACE2;
  border: 1px solid #4BACE2;
}
button.pop-btn::after{
  content: "";
}
.isvip{
  overflow: hidden;
}