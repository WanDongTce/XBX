  background-color:#f4f4f4;
}
.submitpic_pic{
  width:49rpx;
  height:43rpx;
}
.submit_minbox{
  width:132rpx;
  text-align: center;
  margin-right:30rpx;
}
.submit_minbox view{
  font-size:24rpx;
  color:#818181;
}
.myimg_box{
  flex-wrap:wrap;
  margin-left:30rpx;
}
.fabu{
  font-size:26rpx;
  color:#fff !important;
  background-color:#4bace2;
  height:56rpx;
  line-height:56rpx;
  padding:0 40rpx;
  border-radius:10rpx;
  margin-right:30rpx;
}


.bottom_fixbox{
  position:absolute;
  bottom:10rpx;
  justify-content: space-between;
  align-items: center;
  width:100%;
}