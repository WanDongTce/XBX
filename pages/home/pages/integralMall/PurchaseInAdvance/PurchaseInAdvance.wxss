.homework-cont{
    position: relative;
    width: 100%;
    background: #fff;
    margin: 16rpx auto;
    padding: 30rpx 24rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
textarea{
    width: 100%;
    height: 394rpx;
    font-size: 28rpx;
    color: #999;
    line-height: 1.5em;
}
.placeh{
    color: #999;
}
.text-tip{
    position: absolute;
    bottom: 26rpx;
    right: 24rpx;
    font-size: 28rpx;
    color: #999;
}
.imgs{
    width: 100%;
    height: 216rpx;
    background: #fff;
    padding: 32rpx 24rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.scroll-box {
    width: 100%;
    height: 100%;
    white-space: nowrap; 
    background: #fff;
}
.scroll-item{
    position: relative; 
    width: 150rpx;
    height: 150rpx;
    margin-right: 34rpx;
    display: inline-block;
}
.hmwk-img{
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
}
.del-img{
    position: absolute;
    top: 5rpx;
    right: 5rpx;
    width: 40rpx;
    height: 40rpx;
}
.btn-box{
    width: 90%;
    margin-top: 50rpx;
    border-radius: 10rpx;
    color: #fff;
    font-size: 34rpx;
    background: #4bace2;
    text-align: center;
    padding: 3% 0;
}