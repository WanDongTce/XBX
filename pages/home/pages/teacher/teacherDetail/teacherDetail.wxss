page{
    background: #fff;
}

.teacher_bgimg {
    width: 100%;
    height: 472rpx;
    position: absolute;
    /* top: 0; */
    z-index: -1;
}

.topbox {
    width: 100%;
    color: #fff;
    height: 472rpx;
    position: relative;
}
.tea-box {
    position: absolute;
    top: 70rpx;
    left: 6%;
    width: 88%;
    display: flex;
    display: -webkit-flex;
    align-items: flex-start;
}
.header {
    height: 132rpx;
    width: 132rpx;
    border: 2rpx solid #fff;
    margin-right: 30rpx;
    border-radius: 50%;
}
.tea-info{
    width: 80%;
}
.name-box {
    width: 100%;
    margin: 28rpx 0 24rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
}
.name {
    font-size: 30rpx;
    color: #fff;
    margin-right: 24rpx;
}
.level{
    display: inline-block;
    padding: 1rpx 10rpx;
    border-radius: 30rpx;
    color: #fff;
    font-size: 20rpx;
    background: linear-gradient(45deg, #ffcca8, #ffa35f);
    background: -webkit-linear-gradient(45deg, #ffcca8, #ffa35f);
}

.addr{
    width: 100%;
    margin-bottom: 24rpx;
}
.addr image {
    width: 24rpx;
    height: 24rpx;
    vertical-align: middle;
    margin-right: 10rpx;
}
.addr text{
    font-size: 30rpx;
    color: #fff;
}
.sub-box{
    width: 100%;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
}
.sub-lt{
    width: 60%;
}
.sub-lt text{
    color: #fff;
    font-size: 28rpx;
    margin-right: 24rpx;
}
.degree-icon{
    width: 24rpx;
    height: 24rpx;
    display: inline-block;
    vertical-align: middle;
    margin-right: 8rpx;
}
.star-icon{
    width: 20rpx;
    height: 20rpx;
}
.eye-icon{
    width: 24rpx;
    height: 20rpx;
    display: inline-block;
    vertical-align: middle;
    margin-right: 8rpx;
}
.sub-rt{
    width: 40%;
    text-align: right;
}
.top_bottom {
    position: absolute;
    bottom: 0;
    width: 100%;
    background-color: rgba(95, 104, 46, 0.22);
}

.w_p33 {
    width: 33.33%;
    text-align: center;
}

.top_bottom1 {
    font-size: 26rpx;
    margin-top: 20rpx;
}

.top_bottom2 {
    font-size: 26rpx;
    margin: 16rpx 0;
}

.shoucang {
    width: 38rpx;
    height: 36rpx;
    position: absolute;
    top: 20rpx;
    right: 26rpx;
}


.tab {
    height: 88rpx;
    width: 100%;
    border-bottom: 1rpx solid #dfdfdf;
    overflow: hidden;
}

.tab-content {
    background: #fff;
}

.tab-view {
    position: relative; 
    width: 33.33%;
    height: 88rpx;
    line-height: 88rpx;
    float: left;
    background-color: #fff;
    text-align: center;
}
.tab-view .tit{
    color: #333;
    font-size: 28rpx;
}
.active .tit {
    border-bottom: 4rpx solid #fff;
    display: inline-block;
    line-height: 80rpx;
}

.tabline {
    position: absolute;
    bottom: 0;
    left: 25%;
    width: 50%;
    height: 2rpx;
    background: #4bace2;
}

/*介绍  */

.class_content {
    font-size: 28rpx;
    line-height: 42rpx;
    color: #333;
    margin: 30rpx 30rpx 0;
    word-wrap: break-word;
}


.kecheng_box {
    width: 100%;
    padding: 24rpx;
    border-bottom: 1rpx solid #dfdfdf;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    background: #fff;
}
.kecheng_box:last-child{
    border-bottom: none;
}

.kecheng_leftimg {
    width: 214rpx;
    height: 132rpx;
    border-radius: 8rpx;
    margin-right: 24rpx;
}

.kecheng_contentbox {
    min-width: 66%;
}

.kecheng_title {
    width: 100%;
    height: 80rpx;
    color: #333;
    font-size: 28rpx;
    line-height: 40rpx;
    margin-bottom: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.tip{
    width: 100%;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    flex-flow: row-reverse;
}
.agrbox, .msgbox, .timebox {

    font-size: 24rpx;
    color: #999;
    text-align: right;
    margin-left: 24rpx;
    display: flex;
    align-items: center;
}

.agrbox image {
    width: 19rpx;
    height: 18rpx;
    vertical-align: middle;
    margin-right: 10rpx;
}

.msgbox image {
    width: 20rpx;
    height: 17rpx;
    vertical-align: middle;
    margin-right: 10rpx;
}

.timebox image {
    width: 20rpx;
    height: 19rpx;
    vertical-align: middle;
    margin-right: 10rpx;
}

video {
    width: 90vw;
    height: 90vw;
    margin: 46rpx auto 80rpx;
    display: block;
}
/*收费提示*/
.center{
  width: 80%;
  text-align: center;
  box-sizing: border-box;
  border-radius: 12rpx;
}
.popwrap{
display: flex;
flex-direction: column;
justify-content: center;
align-items: center;
padding-bottom: 40rpx;
position: relative;
}
.popwrap-img{
  margin-bottom: 30rpx;
  overflow: hidden;
}
.text{
  font-size: 32rpx;
  font-weight: 400;
  color: #333;
}
.text .num{
  color:#16b7ff;
  font-size: 80rpx;
  font-weight: 700;
  margin-left: 5rpx;
  margin-right: 5rpx;
}
.popwrap-close{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  height: 32rpx;
  width: 32rpx;
}
.pop-text{
  font-size: 28rpx;
  margin-bottom: 40rpx;
  color: #666;
}
.pop-btn{
margin-bottom: 30rpx;
border-width: 0;
width: 60%;
background-color: #4BACE2;
color: white;
border-radius: 46rpx;
}
.pop-btn-outline{
  background-color: white;
  color: #4BACE2;
  border: 1px solid #4BACE2;
}
button.pop-btn::after{
  content: "";
}
.isvip{
  overflow: hidden;
}