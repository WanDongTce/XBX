page{
    width: 100%;
    padding: 10vh 30rpx 30rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.broadcast {
    position: relative;
    width: 100%;
    height: 257rpx;
    margin: 30rpx 0;
    background-color: transparent;
    overflow: hidden;
}
.broadcast:last-child{
    margin-bottom: 0;
}

.broadcast-img {
    position: absolute;
    top: 0;
    left: 0;
    z-index: -10;
    width: 100%;
    height: 100%;
}

.broadcast-box {
    position: absolute;
    bottom: 24rpx;
    left: 3%;
    width: 94%;
    display: flex;
    display: -webkit-flex;
    align-items: flex-start;
    justify-content: space-between;
}
.lt{
    width: 80%;
}

.broadcast-tit {
    width: 100%;
    margin-bottom: 20rpx;
    font-size: 28rpx;
    color: #fff;
}
.broadcast-time {
    width: 100%;
    font-size: 28rpx;
    color: #fff;
    line-height: 1.2em;
}
.btn{
    width: 120rpx;
    height: 42rpx;
    text-align: center;
    line-height: 42rpx;
    border-radius: 10rpx;
    font-size: 28rpx;
    color: #fff;
    margin-top: 20rpx;
    margin-left:8rpx;
}
.bg-green{
    background-color: #5cbe85;
}
.bg-red{
    background-color: #f46a66;
}