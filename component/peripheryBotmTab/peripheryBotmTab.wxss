
.botm-tabs{
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 10;
    width: 100%;
    height: 120rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-around;
    background: #fff;
    border-top: 1rpx solid #dfdfdf;
}
.tab{
    position: relative;
    width: 20%;
    height: 100%;
    padding: 16rpx 0;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.tab-icon{
    width: 40rpx;
    height: 40rpx;
    display: block;
    margin: 0 auto 10rpx;
}
.tab-text{
    width: 100%;
    text-align: center;
    font-size: 28rpx;
    color: #333;
}
.active{
    color: #4bace2;
}
.gift-count{
    position: absolute;
    top: 10rpx;
    right: 30%;
    width: 30rpx;
    height: 30rpx;
    color: #fff;
    background: red;
    font-size: 20rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 30rpx;
}