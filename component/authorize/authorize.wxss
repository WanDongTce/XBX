/* 授权box */
.authorizebox{
    position:fixed;
    left:0;
    top:0;
    z-index:200;
    width:100%;
    height:100vh;
    background:rgba(0,0,0,.7);
}
.authorize_smbox{
    position:relative;
    top:50%;
    left:50%;
    transform:translate(-50%, -50%);
    -webkit-transform:translate(-50%, -50%);
    width:60%;    
    /* background-color:#fff; */
    /* padding:100rpx 0; */
}
.authorize_btn{
    
    height:10vh;
    line-height:10vh;
    font-size:44rpx;
    text-align: center;
    background-color:#fff;
    color:#699ce2;
    border-radius: 20rpx;
    margin:0 auto;
    /* box-shadow: 0rpx 5rpx 15rpx #ccc; */
}