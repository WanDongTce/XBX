.comp-box{
    width: 100%;
    min-height: 100vh;
    background-color: #f7f7f7;
    padding-top: 8vh;  
}

.search-box {
    position: fixed;
    top: 10vh;
    width: 100%;
    height: 8vh;
    z-index: 10;
    background-color: #fff;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-around;
    border-bottom: 1rpx solid #dfdfdf;
}

.search {
    width: 80%;
    height: 6vh;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
    border-radius: 10rpx;
    background-color: #f1f1f1;
    padding: 0 20rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
input{
    width: calc(100% - 40rpx);
    height: 100%;
    font-size: 28rpx;
    color: #333;
}
.placeholder {
    color: #999;
}
.search-icon {
    width: 26rpx;
    height: 26rpx;
}

.search-btn {
    font-size: 30rpx;
    color: #4bace2;
}

.recently-box {
    width: 100%;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;  
    padding: 20rpx 24rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.tit {
    font-size: 26rpx;
    color: #333;
}
.del-icon {
    width: 26rpx;
    height: 26rpx;
}

.list{
    width: 100%;
    display: flex;
    display: -webkit-flex;
    flex-wrap: wrap;
    padding: 0 24rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}

.item {
    padding: 10rpx 42rpx;
    margin-top: 20rpx;
    margin-right: 20rpx;
    font-size: 30rpx;
    color: #333;
    border-radius: 10rpx;
    background-color: #f1f1f1;
}
