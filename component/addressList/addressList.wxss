.box{
    position: relative;
    width: 100%;
    height: 50vh;  
    background: #fff;
}
.content{
    width: 100%;
    height: 100%;
}
.tit{
    width: 100%;
    height: 8vh;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    line-height: 8vh;
    padding: 0 24rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.lt{
    font-size: 28rpx;
    color: #999;
    margin-right: 24rpx;
}
.rt{
    font-size: 30rpx;
    color: #333;
}
.select{
    width: 100%;
    height: 42vh;
    display: flex;
    display: -webkit-flex;
    align-items: flex-start;
    justify-content: space-between;
}
.select > view{
    /* width: 33.33%; */
    width: 50%;
    height: 100%;
    overflow-y: scroll;
}
.item{
    width: 100%;
    padding: 30rpx 0;
    background: #fff;
    color: #999;
    font-size: 30rpx;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.active.item{
    color: #4bace2;
    background: #f4f4f4;
}