.select-box{
    width: 100%;
    height: 8vh;
    background: #fff;
    border-bottom: 1rpx solid #ddd;
    display: felx;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-around;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.select{
    width: 15%;
    height: 100%;
    display: felx;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-around;
}
.selt-itm-text{
    font-size: 28rpx;
    color: #333;
}
.down-icon{
    width: 18rpx;
    height: 16rpx;
    margin-top: 6rpx; 
}
.select-opt-box{
    position: fixed;
    /* top: 17vh; */
    top: 18vh;
    left: 0;
    width: 100%;
    /* height: 83vh; */
    height: 92vh;
    z-index: 10;
}
.opt-mask{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4); 
}
.opt-cont {
    position: relative;
    width: 100%;
    height: 50%;
    background-color: #fff;
    padding: 0 40rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.opt-scroll-view{
    width: 100%;
    height: 80%;
}
.option{
    width: 100%;
    border-bottom: 1rpx solid #dfdfdf;
    display: felx;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
    padding: 4% 0;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.opt-lt{
    font-size: 30rpx;
    color: #454545;
}
.opt-rt{
    width: 5%;
}
.btn-box{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 20%;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    padding: 2% 40rpx;
}
.btn{
    width: 100%;
    padding: 3% 0;
    background: #4bace2;
    font-size: 30rpx;
    color: #fff;
    text-align: center;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    border-radius: 10rpx;
}